<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="paginas.Cadastro"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="408dp"
            android:layout_height="727dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewFundo"
            android:layout_width="416dp"
            android:layout_height="730dp"
            android:background="@color/corFundoPreto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagemCirculada2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/userfoto"
            android:foregroundGravity="center"
            android:onClick="metodoSelecionarFotoPerfil"
            android:tooltipText="Selecionar foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Bem-vindo(a)"
            android:textColor="@color/colorWhite"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Criar uma conta"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageCameraIcone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="172dp"
            android:onClick="metodoSelecionarFotoPerfil"
            android:src="@drawable/camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.624"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="22dp"
            android:layout_marginTop="216dp"
            android:text="Nome"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtCadastrarMoto"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="#858383"
            android:drawableLeft="@drawable/ic_directions"
            android:hint="Modelo da moto ex: Titan 150"
            android:drawablePadding="10dp"
            android:inputType="textAutoComplete"
            android:textColor="@color/colorWhite"
            android:textColorHint="#858383"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewFundo" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="112dp"
            android:layout_height="24dp"
            android:layout_marginTop="468dp"
            android:inputType="textEmailAddress"
            android:text="Moto"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="22dp"
            android:layout_marginTop="300dp"
            android:inputType="textEmailAddress"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtCadastrarEmail"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_marginTop="328dp"
            android:backgroundTint="#858383"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="Exemplo: email@gmail.com"
            android:textColor="@color/colorWhite"
            android:textColorHint="#858383"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewFundo" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="22dp"
            android:layout_marginTop="384dp"
            android:inputType="textEmailAddress"
            android:text="Senha"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtCadastrarSenha"
            android:layout_width="330dp"
            android:layout_height="44dp"
            android:layout_marginTop="416dp"
            android:backgroundTint="#858383"
            android:drawableLeft="@drawable/ic_lock"
            android:hint="Crie uma senha com até 8 caracteres"
            android:drawablePadding="11dp"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="#858383"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewFundo" />

        <Button
            android:id="@+id/botaoFinalizarCadastro"
            android:layout_width="275dp"
            android:layout_height="48dp"
            android:layout_marginTop="608dp"

            android:background="@drawable/button_background"
            android:onClick="metodoBotaoCriarConta"
            android:text="Concluído"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switchEscolha"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginTop="552dp"
            android:backgroundTint="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:layout_marginTop="552dp"
            android:inputType="textEmailAddress"
            android:text="Condutor"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="102dp"
            android:layout_height="24dp"
            android:layout_marginTop="552dp"
            android:inputType="textEmailAddress"
            android:text="Passageiro"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtCadastrarNome"
            android:layout_width="330dp"
            android:layout_height="39dp"
            android:layout_marginTop="252dp"
            android:backgroundTint="#858383"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_pessoa"
            android:hint="Preencha com um nome"
            android:textColor="@color/colorWhite"
            android:textColorHint="#858383"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>